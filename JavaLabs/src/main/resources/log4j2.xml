<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">

    <Properties>
        <!--%d default: {yyyy-MM-dd HH:mm:ss.SSS}
        [%t]:           Ik denk de thread
        %c{1}:          Naam van de Logger die gebruikt is (of de classnaam.class als je die oproept)
        %msg%n:         Bericht. Ik weet niet wat %n betekent
        Origineel:      [ %-5level] %d{yyyy-MM-dd HH:mm:ss} [%t] %c{1} - %msg%n"
        Ander idee:     "%highlight{%d{HH:mm:ss.SSS} %-5level %logger{36}.%M() - %msg%n}{FATAL=red blink, ERROR=red, WARN=yellow bold, INFO=red, DEBUG=green bold, TRACE=blue}"-->
        <property name="logpatternConsole">%highlight{[ %-5level] %d{yyyy-MM-dd HH:mm:ss} [%t] - %logger{}.%C.%M() -- %msg%n}{INFO= blue}"</property>
        <property name="logpatternFile">[ %-5level] %d{yyyy-MM-dd HH:mm:ss} [%t] - %logger{}.%C.%M() -- %msg%n"</property>
    </Properties>

    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="${logpatternConsole}"/>
        </Console>

        <!-- append is false for test purposes so the logfiles are automatically overwritten. Don't use this on production. -->
        <RollingFile name="rollingFile" append="false" fileName="logs/error.log" filePattern="logs/error-%d{yyyy-MM-dd}.%i.log">
            <PatternLayout pattern="${logpatternFile}"/>
            <Policies>
                <!-- Rolling once a day -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <!-- Rolling based on size -->
                <SizeBasedTriggeringPolicy size="2 KB"/>
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Logger name="infoLogger" level="INFO">
            <AppenderRef ref="console"/>
        </Logger>



        <Root level="ALL">
            <AppenderRef ref="rollingFile"/>
        </Root>

    </Loggers>
</Configuration>